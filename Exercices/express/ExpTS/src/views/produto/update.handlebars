<div class='container mt-4'>
  <h1 class='mb-3'>Editar Produto</h1>
  <form method='POST' action='/produto/update/{{produto.id}}'>
    <div class='mb-3'>
      <label for='nome' class='form-label'>Nome:</label>
      <input
        type='text'
        class='form-control'
        id='nome'
        name='nome'
        value='{{produto.nome}}'
        required
      />
    </div>
    <div class='mb-3'>
      <label for='preco' class='form-label'>Pre√ßo:</label>
      <input
        type='number'
        class='form-control'
        id='preco'
        name='preco'
        value='{{produto.preco}}'
        required
      />
    </div>
    <div class='mb-3'>
      <label for='estoque' class='form-label'>Estoque:</label>
      <input
        type='number'
        class='form-control'
        id='estoque'
        name='estoque'
        value='{{produto.estoque}}'
        required
      />
    </div>
    <button type='submit' class='btn btn-primary'>Atualizar Produto</button>
  </form>
</div>