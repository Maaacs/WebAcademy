<div class='container mt-4'>
  <h1 class='mb-3'>Produtos</h1>
  <a href='/produto/create' class='btn btn-success mb-3'>Adicionar Novo Produto</a>
  <div class='list-group'>
    {{#each produtos}}
      <div
        class='list-group-item d-flex justify-content-between align-items-center mb-2'
      >
        <div class='flex-grow-1'>
          {{this.nome}}
          - Pre√ßo:
          {{this.preco}}, Estoque:
          {{this.estoque}}
        </div>
        <div class='mt-3'>
          <a
            class='btn btn-info btn-sm'
            href='/produto/read/{{this.id}}'
          >Detalhes</a>
          <form
            method='POST'
            action='/produto/delete/{{this.id}}'
            style='display: inline;'
          >
            <input
              type='submit'
              class='btn btn-danger btn-sm'
              value='Deletar'
            />
          </form>
          <a
            class='btn btn-primary btn-sm'
            href='/produto/update/{{this.id}}'
          >Editar</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>