{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "ES6",                               
    "rootDir": "src",                                 
    "moduleResolution": "node",                   
    "outDir": "./build/js",                                 
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                      
    "skipLibCheck": true                                
  },
  "include": [
    "src/**/*"
  ]
}
